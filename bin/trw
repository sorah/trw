dic = {
  :ja => ["いってらっしゃい","いってらw","trw","tr","てら","てらー",
          "いってらー"],
  :en => ["Have a nice day!","See you!", "See you again!"]
}

puts dic.key?(ARGV[0].to_sym) ? dic[ARGV[0].to_sym].sample : dic.to_a.sample[1].sample
